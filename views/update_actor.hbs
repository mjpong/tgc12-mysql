{{#extends 'base'}}

{{#block 'content'}}
<form method="POST">
    <div>
        <label class="form-label">First Name</label>
        <input type="text" value="{{actor.first_name}}" class="form-control" name="firstName"/>
    </div>
    <div>
        <label class="form-label">Last Name</label>
        <input type="text" value="{{actor.last_name}}" class="form-control" name="lastName"/>
    </div>

    <input type="submit" class="btn btn-primary my-3"/>
    
</form> 
{{/block}}

{{/extends}}